@using iCareNow.Common
@using iCareNow.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (this.SignInManager.IsSignedIn(this.User))
{
    <a class="account-btn-container" asp-area="Identity" asp-page="/Account/Manage/Index" tabindex="-1"><span class="account-name"><vc:user name-size="full"></vc:user></span><img class="profile-btn" src="/assets/profileBtn.svg" aria-hidden="true" /></a>
}
else
{
    <a class="account-btn-container" asp-area="Identity" asp-page="/Account/Login" tabindex="-1"><img class="profile-btn" src="/assets/profileBtnLoggedOut.svg" aria-hidden="true" /></a>
}
