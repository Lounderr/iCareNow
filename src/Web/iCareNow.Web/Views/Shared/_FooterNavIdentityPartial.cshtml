@using iCareNow.Common
@using iCareNow.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (this.SignInManager.IsSignedIn(this.User))
{
    <a class="-hover-text-white-glare" asp-area="Identity" asp-controller="Account" asp-action="Manage" tabindex="3">Профил</a>
}
else
{
    <a class="-hover-text-white-glare" asp-area="Identity" asp-controller="Account" asp-action="Register" tabindex="3">Регистрирай се</a>
    <a class="-hover-text-white-glare" asp-area="Identity" asp-controller="Account" asp-action="Login" tabindex="3">Впиши се</a>
}
