@using iCareNow.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/reset.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout/layout.min.css" asp-append-version="true" />
    @await this.RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="top-nav">
            <h1 class="logo"><a asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a></h1>
            <!-- class: nav-active -->
                <ul class="nav-items">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index">Начало</a></li>
                    <li class="nav-item"><a asp-controller="Diseases" asp-action="Index">Здраве от А до Я</a></li>
                    <li class="nav-item"><a href="#">Свържи се с лекар</a></li>
                    <li class="nav-item"><a href="#">Запитвания</a></li>
                    <li class="nav-item"><a href="#">Медицински статии</a></li>
                    <li class="nav-item"><a href="#">За нас</a></li>
                </ul>
            <div class="controls">
                <partial name="_LoginPartial" />
                <!-- class: menu-active -->
                <div class="menu-controls">
                    <img class="menu-btn" onclick="toggleMenu()" src="/assets/menuBtn.svg" alt="" />
                    <img class="close-btn" onclick="toggleMenu()" src="/assets/closeBtn.svg" alt="" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @this.RenderBody()
    </main>
    <footer>
        <div class="footer-info-container">
            <div class="description-container">
                <h2>@GlobalConstants.SystemName</h2>
                <p>Приложението @GlobalConstants.SystemName е медицински наръчник, който помага  да се справиш със симптомите на често срещаните болести чрез доказани и безопасни методи за лечение.</p>
                <p>Нашето приложение предоставя и опцията за онлайн консултация с квалифицирани медицински лица.</p>
            </div>
            <div class="sitemap-container">
                <h3>Карта на сайта</h3>
                <nav>
                    <a asp-controller="Home" asp-action="Index">Начало</a>
                    <a href="#">Категории</a>
                    <a href="#">Свържете се с лекар</a>
                    @*<a>Медицински статии</a>*@
                    <a href="#">За нас</a>
                </nav>
            </div>
            <div class="feedback-container">
                <h3>Имате проблем или идея? <br>Пишете ни!</h3>
                <a href="#" class="btn-default">Обратна връзка</a>
            </div>
        </div>
        <div class="legal-content-container">
            <a href="#">&copy; @DateTime.UtcNow.Year @GlobalConstants.SystemName. Всички права запазени</a>
            <a href="#">Условия за ползване</a>
            <a href="#">Политика за поверителност</a>
        </div>
    </footer>


    @*
    <div class="container">
    <partial name="_CookieConsentPartial" />
    </div>*@

    @*
    <footer class="border-top footer text-muted">
    <div class="container">
    &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>
    *@

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
