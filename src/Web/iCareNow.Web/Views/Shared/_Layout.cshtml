@using iCareNow.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/utilities/style.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout/layout.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="top-nav">
            <h1 class="logo"><a href="#">iCareNow</a></h1>
            <!-- class: nav-active -->
            <div class="nav-items-container"> 
                <ul class="nav-items">
                    <li class="nav-item"><a href="#">Начало</a></li>
                    <li class="nav-item"><a href="#">Здраве от А до Я</a></li>
                    <li class="nav-item"><a href="#">Свържи се с лекар</a></li>
                    <li class="nav-item"><a href="#">Запитвания</a></li>
                    <li class="nav-item"><a href="#">Медицински статии</a></li>
                    <li class="nav-item"><a href="#">За нас</a></li>
                </ul>
            </div>
            <div class="controls">
                <partial name="_LoginPartial" />
                <!-- class: menu-active -->
                <div class="menu-controls">
                    <img class="menu-btn" onclick="toggleMenu()" src="/assets/menuBtn.svg" alt="" />
                    <img class="close-btn" onclick="toggleMenu()" src="/assets/closeBtn.svg" alt="" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @this.RenderBody()
    </main>


    @*
    <div class="container">
    <partial name="_CookieConsentPartial" />
    </div>*@

