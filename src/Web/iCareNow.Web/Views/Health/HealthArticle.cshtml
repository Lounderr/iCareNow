@using iCareNow.Common
@model iCareNow.Web.ViewModels.Articles.ArticleInputModel
@{
    this.ViewData["Title"] = Model.Title;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/healthArticle/healthArticle.min.css" asp-append-version="true" />
}
<div class="page-background">
    <img class="background-image" src="/assets/backgroundImage.jpg" aria-hidden="true" />
    <div class="background-darken"></div>
</div>

@Html.Raw(Model.Content)
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <form method="post" class="admin-controls">
        <a class="-button --invert" asp-area="Administration" asp-controller="Articles" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        
        <button asp-area="Administration" asp-controller="Articles" asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="-button --danger">Delete</button>
    </form>
}

@section Scripts {
    <script src="~/js/healthArticle.js" asp-append-version="true"></script>
}