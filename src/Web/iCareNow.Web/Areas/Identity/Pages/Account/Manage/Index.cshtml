@page
@model IndexModel
@{
    ViewData["Title"] = "Акаунт";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/login.min.css" asp-append-version="true" />
}

<div class="background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="" />
    <div class="background-darken"></div>
</div>
<section class="first-section">

    <div class="panel-container panel-centered">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">@this.User.Identity.Name</h4>

        <form method="post">
            <div class="input-fields">
                <a class="-button --large @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Промени имейл</a>
                <a class="-button --large @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Промени парола</a>
                <a class="-button --large @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Лични данни</a>
            </div>

            <div class="panel-buttons">
                <button asp-controller="Account" asp-action="Logout" type="submit" class="-button --danger --large">Изход</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}