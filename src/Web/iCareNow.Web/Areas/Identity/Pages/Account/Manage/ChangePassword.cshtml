@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Промени парола";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/login.min.css" asp-append-version="true" />
}

<div class="background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="" />
    <div class="background-darken"></div>
</div>


<section class="first-section">

    <div class="panel-container panel-centered">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">@this.User.Identity.Name</h4>

        <form id="change-password-form" method="post">
            <div class="input-fields">
                <div class="input-field">
                    <div class="input-text-field -text-field-input --icon --invert-icon">
                        <input asp-for="Input.OldPassword" placeholder="Стара парола" type="password" />
                        <img src="/assets/keyIcon.svg" />
                    </div>
                    <span asp-validation-for="Input.OldPassword" class="-validation-error"></span>
                </div>

                <div class="input-field">
                    <div class="input-text-field -text-field-input --icon --invert-icon">
                        <input asp-for="Input.NewPassword" placeholder="Нова парола" type="password" />
                        <img src="/assets/keyIcon.svg" />
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="-validation-error"></span>
                </div>

                <div class="input-field">
                    <div class="input-text-field -text-field-input --icon --invert-icon">
                        <input asp-for="Input.NewPassword" placeholder="Нова парола" type="password" />
                        <img src="/assets/keyIcon.svg" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="-validation-error"></span>
                </div>

                <partial name="_StatusMessage" model="Model.StatusMessage" />

            </div>

            <div class="panel-buttons">
                <button type="submit" class="-button --large">Промени</button>

            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}