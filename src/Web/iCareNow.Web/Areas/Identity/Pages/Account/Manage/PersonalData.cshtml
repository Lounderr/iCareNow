@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Лични данни";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/login.min.css" asp-append-version="true" />
}

<div class="background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="" />
    <div class="background-darken"></div>
</div>

<section class="first-section">

    <div class="panel-container panel-centered">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">@this.User.Identity.Name</h4>

        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <div class="panel-buttons">
                <button type="submit" class="-button --large">Изтегли данни</button>
                <a asp-page="DeletePersonalData" class="-button --danger --large">Изтрий профил</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
