@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на профил";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/login.min.css" asp-append-version="true" />
}

<div class="page-background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="Background image" />
    <div class="background-darken"></div>
</div>


<section class="first-section -primary-section --responsive-top-padding">

    <div class="-content-panel --center">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">Акаунтът <strong class="-font-weight-700">@this.User.Identity.Name</strong> не може да бъде възстановен след изтриване</h4>

        <div asp-validation-summary="All" class="-validation-error"></div>
        <form id="delete-user" method="post" class="panel-column-flex">
            @if (Model.RequirePassword)
            {
                <div class="input-field">
                    <div class="input-text-field -text-field-input --icon --invert-icon">
                        <input asp-for="Input.Password" placeholder="Парола" type="password" />
                        <img src="/assets/keyIcon.svg" alt="Icon of password input field" />
                    </div>
                    <span asp-validation-for="Input.Password" class="-validation-error"></span>
                </div>
            }

            <button type="submit" role="alert" aria-label="Натискайки този бутон, Вие ще изтриете профила си" class="-button --danger --large">Изтрий акаунта ми</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}