@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрирай се";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/register.min.css" asp-append-version="true" />
}

<div class="page-background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="Background image" />
    <div class="background-darken"></div>
</div>
<section class="first-section -primary-section --responsive-top-padding">

    <div class="-content-panel --center">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">Въведете своите данни</h4>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="panel-column-flex">
            <div class="input-field">
                <div class="input-text-field -text-field-input --icon --invert-icon">
                    <input asp-for="Input.Email" placeholder="Имейл" type="text" />
                    <img src="/assets/mailIcon.svg" alt="Icon of email input field" />
                </div>
                <span asp-validation-for="Input.Email" class="-validation-error"></span>
            </div>

            <div class="input-field">
                <div class="name-input input-text-field -text-field-input --icon --invert-icon">
                    <input asp-for="Input.FirstName" placeholder="Име" type="text" />
                    <img src="/assets/person.svg" alt="Icon of first name input field" />
                </div>
                <span asp-validation-for="Input.FirstName" class="-validation-error"></span>
            </div>

            <div class="input-field">
                <div class="name-input input-text-field -text-field-input --icon --invert-icon">
                    <input asp-for="Input.LastName" placeholder="Фамилия" type="text" />
                    <img src="/assets/person.svg" alt="Icon of last name input field" />
                </div>
                <span asp-validation-for="Input.LastName" class="-validation-error"></span>
            </div>

            <div class="input-field">
                <div class="input-text-field -text-field-input --icon --invert-icon">
                    <input asp-for="Input.Password" placeholder="Парола" type="password" />
                    <img src="/assets/keyIcon.svg" alt="Icon of password input field" />
                </div>
                <span asp-validation-for="Input.Password" class="-validation-error"></span>
            </div>

            <div class="input-field">
                <div class="input-text-field -text-field-input --icon --invert-icon">
                    <input asp-for="Input.ConfirmPassword" placeholder="Потвърди парола" type="password" />
                    <img src="/assets/keyIcon.svg" alt="Icon of confirm password input field" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="-validation-error"></span>
            </div>

            <label class="-checkbox-label" asp-for="Input.AcceptTos">
                <input asp-for="Input.AcceptTos" class="-checkbox" type="checkbox" />
                <span>Приемам <a class="-link --white" href="#">условията за ползване</a></span>
            </label>

            <button type="submit" class="-button --large">@ViewData["Title"]</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
