@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Забравихте паролата си?";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/identity/login.min.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/css/pages/identity/forgottenPassword.min.css" asp-append-version="true" />*@
}

<div class="background">
    <img class="background-image" src="/assets/backgroundImage.jpg" alt="" />
    <div class="background-darken"></div>
</div>
<section class="first-section">

    <div class="panel-container panel-centered">
        <h2 class="panel-title">@ViewData["Title"]</h2>
        <h4 class="panel-description">Въведете своя имейл адрес</h4>

        <form method="post">
            <div class="input-fields">
                <div class="input-field">
                    <div class="input-text-field -text-field-input --icon --invert-icon">
                        <input asp-for="Input.Email" placeholder="Имейл" type="text" />
                        <img src="/assets/mailIcon.svg" />
                    </div>
                    <span asp-validation-for="Input.Email" class="-validation-error"></span>
                </div>
            </div>

            <div class="panel-buttons">
                <button type="submit" class="-button --large">Изпрати</button>
            </div>
        </form>
        <span class="create-account-question">Не разполагате с акаунт? <a asp-page="./Register" class="-link">Създайте го!</a></span> @*asp-route-returnUrl="@Model.ReturnUrl"*@
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
