@import "../utilities/_colors.scss";

$btn-height: 45px;

@mixin btn-default($scale: 1, $inverted: false) {
    .btn-default {
        display: block;
        height: calc(45px * $scale);
        width: fit-content;
        padding-inline: calc(45px * $scale);
        border: 1px solid $white;
        color: $white;
        background-color: transparent;
        text-transform: uppercase;
        user-select: none !important;
        font-weight: 700;
        font-size: calc(1rem * $scale);
        line-height: calc($btn-height * $scale);
        white-space: nowrap;
        cursor: pointer;

        &:hover {
            background-color: $white;
            color: $black;
        }

        &.btn-inverted {
            color: $black;
            background-color: $white;
        }
        /*        &.btn-small {
            height: calc(45px * ($scale * 0.9));
            padding-inline: calc(45px * ($scale * 0.9));
            font-size: calc(1rem * ($scale * 0.9));
            line-height: calc($btn-height * ($scale * 0.9));
        }*/
    }
}

